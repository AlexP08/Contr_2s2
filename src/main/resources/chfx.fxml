<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.contr_2s2.ChfxController">
    <TableView fx:id="filmTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="50" />
            <TableColumn text="Title" fx:id="titleColumn" prefWidth="200" />
            <TableColumn text="Genre" fx:id="genreColumn" prefWidth="100" />
            <TableColumn text="Duration" fx:id="durationColumn" prefWidth="100" />
            <TableColumn text="Release Year" fx:id="releaseYearColumn" prefWidth="100" />
        </columns>
    </TableView>

    <Button text="Add Film" onAction="#addFilm" />
    <Button text="Edit Film" onAction="#editFilm" />
    <Button text="Delete Film" onAction="#deleteFilm" />
</VBox>
